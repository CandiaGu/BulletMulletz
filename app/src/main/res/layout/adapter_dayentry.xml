<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/weekDay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:text="@string/mon"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/add_task_button"
        android:layout_width="39dp"
        android:layout_height="43dp"
        android:onClick="addTask"
        android:text="+"
        android:layout_marginLeft="41dp"
        app:layout_constraintLeft_toLeftOf="@+id/weekDay"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/weekDay" />

    <EditText
        android:id="@+id/add_task"
        android:layout_width="208dp"
        android:layout_height="37dp"
        android:inputType="text"
        android:onClick="changeCurAddTask"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/add_task_button"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/weekDay"
        app:layout_constraintHorizontal_bias="0.175"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/weekDay" />

    <!--android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view"
